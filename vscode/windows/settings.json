{
    "editor.tabCompletion": "on", // プレフィックスが一致する場合、Tabを押したときにスニペットを挿入するかどうか
    "editor.trimAutoWhitespace": false,
    "editor.dragAndDrop": false, // 選択した部分のドラッグアンドドロップを許可するかどうか
    "editor.renderIndentGuides": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.suggestSelection": "first",
    "editor.fontSize": 13,
    "editor.letterSpacing": 0.01, // 文字の間隔
    "editor.minimap.maxColumn": 55,
    "editor.wordWrap": "off", // 折り返しの有無
    "editor.rulers": [80], // 80文字の位置に線を引く

    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": false,
    "files.exclude": {
        "**/.git": false
    },

    "workbench.colorTheme": "Solarized Custom Dark Italic",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": false,
    "workbench.tree.indent": 15,
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#fcadfc7a"
    },

    "trailing-spaces.trimOnSave": true,
    "trailing-spaces.syntaxIgnore": [
        "markdown"
    ],

    "terminal.explorerKind": "external",
    "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7-preview\\pwsh.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7-preview\\pwsh.exe",

    "window.restoreWindows": "none", // 前回開いてたのを開かない
    "window.zoomLevel": 0,

    "extensions.ignoreRecommendations": true,
    "git.autofetch": true,

    // ブレッドキャンバス
    "breadcrumbs.enabled": true,

    // マークダウンの設定
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },
    "markdown-preview-enhanced.mermaidTheme": "default",

    // code runner
    "code-runner.executorMap": {
        //"cpp": "cd $dir && rm -f $dir$fileNameWithoutExt && time g++ -std=c++17 -Wall --pedantic-errors $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "cpp": "cd $dir && make",
        "go": "go run"
    },
    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,

    // go
    "go.gopath": "C:/Users/nakamura-ma/go",
    "go.goroot": "C:/go",
    "go.toolsEnvVars": {"GO111MODULE": "on"},
    "go.formatTool": "gofmt",
    "go.lintTool": "golint",
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "go-langserver": "gopls"
    },
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true,
        "rename": true,
        "goToDefinition": true,
        "hover": true,
        "signatureHelp": true,
        "goToTypeDefinition": true,
        "goToImplementation": true,
        "documentSymbols": true,
        "workspaceSymbols": true,
        "findReferences": true,
        "diagnostics": true
    },
    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "gopls": {
        "hoverKind": "SynopsisDocumentation",
        "usePlaceholders": true,
        "linkTarget": "pkg.go.dev",
        "staticcheck": false,
        "completionDocumentation": true,
        "completeUnimported": true,
        "deepCompletion": true
    }
}

{
    "editor.dragAndDrop": false,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.suggestSelection": "first",
    "editor.fontSize": 11,
    "editor.minimap.maxColumn": 55,
    "editor.wordWrap": "off", // 折り返しの有無
    "editor.rulers": [80], // 80文字の位置に線を引く

    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": false,
    "files.exclude": {
        "**/.git": false
    },

    "workbench.colorTheme": "Solarized Custom Dark Italic",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.activityBar.visible": false,
    "workbench.tree.indent": 15,
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#00ccff8a"
    },

    "trailing-spaces.trimOnSave": true,
    "trailing-spaces.syntaxIgnore": [
        "markdown"
    ],

    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.inheritEnv": false,

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vsicons.dontShowNewVersionMessage": true,
    "breadcrumbs.enabled": true,

    // 前回開いてたのを開かない
    "window.restoreWindows": "none",
    "window.zoomLevel": 0,

    "extensions.ignoreRecommendations": true,

    // マークダウンの設定
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },

    // code runner
    "code-runner.executorMap": {
        //"cpp": "cd $dir && rm -f $dir$fileNameWithoutExt && time g++ -std=c++17 -Wall --pedantic-errors $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "cpp": "cd $dir && make",
        "go": "go run"
    },
    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,

    // c++
    "C_Cpp.updateChannel": "Insiders",
    "lldb.launch.expressions": "native",

    // python
    "python.jediEnabled": false,
    "python.languageServer": "Microsoft",

    // go
    "go.gopath": "/Users/masaaki/go/1.14.2",
    "go.goroot": "/Users/masaaki/.anyenv/envs/goenv/versions/1.14.2",
    "go.toolsEnvVars": {"GO111MODULE": "on"},
    "go.formatTool": "gofmt",
    "go.lintTool": "golint",
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "go-langserver": "gopls"
    },
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true,
        "rename": true,
        "goToDefinition": true,
        "hover": true,
        "signatureHelp": true,
        "goToTypeDefinition": true,
        "goToImplementation": true,
        "documentSymbols": true,
        "workspaceSymbols": true,
        "findReferences": true,
        "diagnostics": true
    },
    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "gopls": {
        "hoverKind": "SynopsisDocumentation",
        "usePlaceholders": true,
        "linkTarget": "pkg.go.dev",
        "staticcheck": false,
        "completionDocumentation": true,
        "completeUnimported": true,
        "deepCompletion": true
    },

    // drowio
    "hediet.vscode-drawio.local-storage": ""
}
